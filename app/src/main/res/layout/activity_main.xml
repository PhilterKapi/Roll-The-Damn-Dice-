<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50A7EA"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/StartText"
        android:layout_width="374dp"
        android:layout_height="106dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="@string/roll_the_damn_dice"
        android:textColor="#EAEDE6"
        android:textColorHighlight="#673AB7"
        android:textSize="36sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_first2"
        android:layout_width="204dp"
        android:layout_height="61dp"
        android:layout_marginBottom="140dp"
        android:text="@string/roll_dice"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_first3"
        android:layout_width="209dp"
        android:layout_height="61dp"
        android:layout_marginBottom="64dp"
        android:text="@string/reset"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/button_first2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/dice_image"
        android:layout_width="158dp"
        android:layout_height="147dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="76dp"
        android:contentDescription="DiceImG"
        android:src="@drawable/empty_dice"
        app:layout_constraintBottom_toTopOf="@+id/button_first3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StartText"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/empty_dice"
        tools:src="@drawable/dice_1" />

    <ImageView
        android:id="@+id/dice_image2"
        android:layout_width="154dp"
        android:layout_height="148dp"
        android:layout_marginBottom="76dp"
        android:src="@drawable/empty_dice"
        app:layout_constraintBottom_toTopOf="@+id/button_first3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dice_image"
        app:layout_constraintTop_toBottomOf="@+id/StartText"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/empty_dice"
        tools:src="@drawable/dice_1"
        android:contentDescription="TODO" />

</androidx.constraintlayout.widget.ConstraintLayout>